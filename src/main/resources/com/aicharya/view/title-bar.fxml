<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="titleBar" alignment="CENTER_RIGHT" prefHeight="30.0" spacing="5.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aicharya.controller.TitleBarController">
   <children>
      <Region HBox.hgrow="ALWAYS" />
      <Button fx:id="minimizeButton" onAction="#handleMinimize" styleClass="title-bar-button" text="—" />
      <Button fx:id="maximizeButton" onAction="#handleMaximize" styleClass="title-bar-button" text="◻" />
      <Button fx:id="closeButton" onAction="#handleClose" styleClass="title-bar-button-close" text="✕" />
   </children>
</HBox>
