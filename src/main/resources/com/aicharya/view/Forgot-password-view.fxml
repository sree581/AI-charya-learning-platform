<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aicharya.controller.ForgotPasswordController">
   <padding>
      <Insets left="30.0" right="30.0" />
   </padding>
   <children>
      <Label text="Forgot Password" />
      <TextField fx:id="emailField" promptText="Email" />
      <PasswordField fx:id="newPasswordField" promptText="New Password" />
      <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" />
      <Button onAction="#handleChangePasswordAction" prefWidth="250.0" text="Change Password" />
      <Hyperlink onAction="#handleBackToLoginAction" text="Back to Login" />
   </children>
</VBox>