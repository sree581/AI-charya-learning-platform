<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?> <?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aicharya.controller.LoginController">
   <padding>
      <Insets left="30.0" right="30.0" />
   </padding>
   <children>
      <Label text="Welcome Back!" />
      <TextField fx:id="usernameField" promptText="Username" />
      <PasswordField fx:id="passwordField" promptText="Password" />
      <Button fx:id="loginButton" onAction="#handleLoginButtonAction" prefWidth="250.0" text="Login" />
      <Hyperlink onAction="#handleRegisterLinkAction" text="Don't have an account? Register" />
      <Hyperlink onAction="#handleForgotPasswordLinkAction" text="Forgot Password?" />
   </children>
</VBox>